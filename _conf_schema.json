{
  "output": {
    "description": "输出配置",
    "type": "object",
    "hint": "配置各种输出文本信息",
    "items": {
      "skill_check": {
        "description": "技能判定输出",
        "type": "object",
        "items": {
          "normal": {
            "description": "普通技能判定",
            "type": "text",
            "default": "<{name}> 的【{skill_name}】检定: {roll_result}/{skill_value} → {result}"
          },
          "penalty": {
            "description": "惩罚骰",
            "type": "text",
            "default": "<{name}> 惩罚骰: {new_tens_digits} → 最终结果: {final_y}/{skill_value} → {result}"
          },
          "bonus": {
            "description": "奖励骰",
            "type": "text",
            "default": "<{name}> 奖励骰: {new_tens_digits} → 最终结果: {final_y}/{skill_value} → {result}"
          }
        }
      },
      "rp": {
        "description": "运势输出",
        "type": "object",
        "items": {
          "today": {
            "description": "运势查询结果",
            "type": "text",
            "default": "{name}今日的运势是: {rp}/100 哦~"
          }
        }
      },
      "fireball": {
        "description": "火球术输出",
        "type": "object",
        "items": {
          "result": {
            "description": "火球术伤害结果",
            "type": "text",
            "default": "{ring} 环火球术伤害: {breakdown} = {total}"
          },
          "low": {
            "description": "火球术失败提示",
            "type": "text",
            "default": "火球术失败: 环数不足"
          }
        }
      },
      "coc_roll": {
        "description": "COC判定输出",
        "type": "object",
        "items": {
          "set_rule": {
            "description": "设置规则提示",
            "type": "text",
            "default": "收到！接下来大成功/大失败将会按照{rule}规则进行哦~"
          }
        }
      },
      "pc": {
        "description": "人物卡相关输出",
        "type": "object",
        "items": {
          "create_success": {
            "description": "创建成功",
            "type": "text",
            "default": "人物卡 [{name}] 已创建 (ID: {id})"
          },
          "change_success": {
            "description": "切换成功",
            "type": "text",
            "default": "已切换到人物卡 [{name}]"
          }
        }
      },
      "dice": {
        "description": "掷骰输出",
        "type": "object",
        "items": {
          "normal": {
            "description": "普通掷骰",
            "type": "object",
            "items": {
              "success": {
                "description": "普通掷骰成功",
                "type": "text",
                "default": "{name} 的结果是: {result}~"
              },
              "success_remark": {
                "description": "普通掷骰成功（带备注）",
                "type": "text",
                "default": "{name} 的【{remark}】结果是: {result}~"
              },
              "error": {
                "description": "普通掷骰错误",
                "type": "text",
                "default": "骰子表达式错误: {error}"
              }
            }
          },
          "hidden": {
            "description": "隐骰",
            "type": "object",
            "items": {
              "success": {
                "description": "隐骰成功",
                "type": "text",
                "default": "已经进行了隐密掷骰: {result}"
              },
              "error": {
                "description": "隐骰错误",
                "type": "text",
                "default": "隐骰表达式错误: {error}"
              }
            }
          },
          "roll_types": {
            "description": "掷骰类型",
            "type": "object",
            "items": {
              "bonus": {
                "description": "奖励骰",
                "type": "text",
                "default": "奖励骰"
              },
              "penalty": {
                "description": "惩罚骰",
                "type": "text",
                "default": "惩罚骰"
              }
            }
          },
          "format_error": {
            "type": "text",
            "default": "无法解析骰子表达式: {expr}"
          },
          "limit_error": {
            "type": "text",
            "default": "掷骰参数超过限制"
          },
          "normal_dice": {
            "type": "text",
            "default": "{dice_count}d{dice_faces}: [{rolls}] = {subtotal}"
          },
          "keep_highest": {
            "type": "text",
            "default": "{dice_count}d{dice_faces}k{keep_highest}: [{rolls}]保留最高{keep_highest}个: {kept} = {subtotal}"
          },
          "dice_with_modifier": {
            "type": "text",
            "default": "{dice_count}d{dice_faces}{modifier}: [{rolls}]{modifier} = {total}"
          },
          "modifier_error": {
            "type": "text",
            "default": "无效的修饰符: {modifier}"
          },
          "vampire_roll": {
            "type": "text",
            "default": "{dice_count}d10v{vampire_difficulty}: [{rolls}]"
          },
          "vampire": {
            "description": "吸血鬼骰结果",
            "type": "object",
            "items": {
              "success_result": {
                "type": "text",
                "default": " 成功 ({success_num} 次成功)"
              },
              "great_failure": {
                "type": "text",
                "default": " 大失败"
              },
              "failure": {
                "type": "text",
                "default": " 失败"
              }
            }
          }
        }
      },
      "san": {
        "description": "理智相关输出",
        "type": "object",
        "items": {
          "check_result_loss": {
            "description": "理智检定失败",
            "type": "text",
            "default": "{name} 理智检定: {roll_result}/{san_value} {result_msg} → -{loss}, 当前 {new_san}"
          }
        }
      }
    }
  },
